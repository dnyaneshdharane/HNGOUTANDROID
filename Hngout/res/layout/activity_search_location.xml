<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchLocation" >

    <Button
        android:id="@+id/bnext"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/eTSearchloc"
        android:layout_alignBottom="@+id/eTSearchloc"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/br_next" />

    <EditText
        android:id="@+id/eTSearchloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="29dp"
        android:layout_toLeftOf="@+id/bnext"
        android:ems="10"
        android:hint="location"
        android:inputType="textPersonName" />

</RelativeLayout>